        }
    ]
section.hBanner
    .hBanner__slide
        each sl in slide
            // Item
            .hBanner__slide__item
                .hBanner__slide__item__img
                    img(src= imgPath + "banner/" + sl.img, alt=sl.title)
                .container
                    .hBanner__slide__item__content
                        h2.hBanner__slide__item__head
                            a(href=sl.url title=sl.title)= sl.title
                        .hBanner__slide__item__desc
                            p
                                a(href=sl.url title=sl.title)= sl.desc
                        .hBanner__slide__item__footer
                            a.btn.btn-primary(href=sl.url title="Read more") Read more
            // End Item
    // End Main Slide
    |
    |
    .hBanner__footer
        .container
            .hBanner__nav
                each sl in slide
                    // Item
                    .hBanner__nav__item
                        .hBanner__nav__item__inner
                            .hBanner__nav__item__img
                                img(src= imgPath + "banner/" + sl.img, alt=sl.title)
                            h3.hBanner__nav__item__head= sl.title
                    // End Item
    // End Footer Slide
    |
    |
// End Banner Section
